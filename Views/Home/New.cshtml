@{
ViewData["Title"] = "Home - Add New";
}


@model Dish

<div>
    <div class="text-center">
        <h3 class="">Add a new Dish!</h3>
    </div>
    <div class="d-flex justify-content-left">
        <a a asp-action="Index" asp-controller="Home">Home</a>
    </div>
    <hr>

    <form asp-action="Create" asp-controller="Home" method="post">
        <div class="row">
            <div class="form-group col-sm ">
                <label asp-for="Chef"></label>
                <span asp-validation-for="Chef" class="salmon"></span>
                <input asp-for="Chef" class="form-control mb-3">

                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="salmon"></span>
                <input asp-for="Name" class="form-control mb-3">

                <label asp-for="Calories"></label>
                <span asp-validation-for="Calories" class="salmon"></span>
                <input asp-for="Calories" class="form-control mb-3">
            </div>

            <div class="form-group col-sm ">
                <label asp-for="Tastiness"></label>
                <span asp-validation-for="Tastiness" class="salmon"></span>
                <select asp-for="Tastiness" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>

            <div class="form-group col-sm ">
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="salmon"></span>
                <textarea asp-for="Description" class="form-control" cols="10" rows="3"></textarea>

                <button type="submit" class="btn btn-outline-warning mt-3">Add Dish</button>
                @* <input type="submit" value="Add Dish"> *@
            </div>

        </div>
    </form>




</div>

