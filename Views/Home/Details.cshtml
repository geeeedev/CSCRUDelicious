@{
    ViewData["Title"] = "Home - Dish Details";
}



@model Dish;

<div>
    <div class="text-center">
        <h3 class="">Dish Details View</h3>
    </div>
    <div class="d-flex justify-content-left pink">
        <a href="/Home">Home</a>
    </div>
    <hr>

    <form asp-action="Delete" asp-controller="Home"  
            asp-route-id='@Model.DishId' asp-method="post">
        <div>
            <h4 class="text-center">@Model.Name</h4>
            <h6 class="text-center">@Model.Chef</h6>
            <hr>
            <p>@Model.Description</p>
            <p>Calories: @Model.Calories</p>
            <p>Tastiness: @Model.Tastiness</p>

            @* Delete should be a HttpPost, not HttpGet <a></a> !!! Use button for Delete *@
            <button type="submit" class="btn btn-outline-warning mt-3">Delete</button> 
            <a asp-controller="Home" asp-action="Edit" 
                asp-route-id="@Model.DishId" class="btn btn-outline-warning mt-3">Edit</a>
        </div>
    </form>

</div>

